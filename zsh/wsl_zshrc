alias cmr="chezmoi re-add"  # 全変更を一括反映

# chezmoi-commit: 変更をコミット
chezmoi-commit() {
    local source_dir=$(chezmoi source-path)
    cd "$source_dir"
    git add -A
    git status
    echo "Commit message (empty to cancel):"
    read msg
    if [ -n "$msg" ]; then
        git commit -m "$msg"
    fi
    cd -
}
alias cmc="chezmoi-commit"
