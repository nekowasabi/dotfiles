# chezmoi managed gitconfig
# Environment: {{ .pc }} | WSL: {{ .isWsl }} | Mac: {{ .isMac }}

[user]
	email = {{ .email }}
	name = {{ .name }}

[core]
	pager = delta

[pager]
	diff = delta
	log = delta
	reflog = delta
	show = delta

[interactive]
	diffFilter = delta --color-only

[delta]
	navigate = true

[merge]
	conflictstyle = diff3

[diff]
	colorMoved = default
	compactionHeuristic = false

[color "diff"]
	meta = "#4e4e4e"
	frag = "#875fff"
	old = "#d70000"
	new = "#00af00"
	func = "#5fd7ff"
	context = "#4e4e4e"

{{- if .isWsl }}
# WSL specific: GitHub CLI credential helper
[credential "https://github.com"]
	helper = !/home/linuxbrew/.linuxbrew/bin/gh auth git-credential
[credential "https://gist.github.com"]
	helper = !/home/linuxbrew/.linuxbrew/bin/gh auth git-credential
{{- end }}

{{- if .isMac }}
# Mac specific: osxkeychain
[credential]
	helper = osxkeychain
{{- end }}
