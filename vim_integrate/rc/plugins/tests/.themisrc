" Themis configuration for Neovim plugin tests
if &encoding ==# 'latin1'
  set encoding=utf-8
endif

" Force English interface
try
  language message C
catch
endtry
set helplang=en

let s:assert = themis#helper('assert')
call themis#option('recursive', 1)
call themis#option('reporter', 'dot')
call themis#helper('command').with(s:assert)

" Add autoload path
set runtimepath+=~/.config/nvim
set runtimepath+=~/.config/nvim/plugged/vim-fern

" Load fern plugin
runtime plugin/fern.vim

call themis#log(substitute(execute('version'), '^\%(\r\?\n\)*', '', ''))
call themis#log('-----------------------------------------------------------')
call themis#log('&runtimepath:')
for s:runtimepath in split(&runtimepath, ',')
  call themis#log('  ' . s:runtimepath)
endfor
call themis#log('-----------------------------------------------------------')
